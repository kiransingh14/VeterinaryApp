<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".AnimalVaccination">
    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:baselineAligned="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:text="VET CARE"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="155dp">

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="18dp"
                    android:text="WELCOME!!! \n HOW CAN \n WE HELP YOU? "
                    android:textColor="@color/whiteTextColor" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="148dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/ic_login_hero" />
            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="362dp"
                android:layout_height="394dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="148dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="100dp"
                    android:src="@drawable/animal_care__1_" />

                <Button
                    android:id="@+id/button"
                    android:layout_gravity=""
                    style="@style/RegisterButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"

                    android:layout_marginLeft="75dp"
                    android:text="ADD YOUR PET DETAILS HERE" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    style="@style/RegisterButton"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="240dp"

                    android:layout_marginLeft="45dp"
                    android:text="FIND SOLUTIONS FOR COMMAN PROBLEMS" />
                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    style="@style/RegisterButton"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="320dp"
                    android:layout_marginLeft="80dp"

                    android:text="CONTACT DOCTOR" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>





    </ScrollView>
</RelativeLayout>